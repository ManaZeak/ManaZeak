version: '3'
services:

    db:
        image: postgres:latest
        container_name: manazeak_postgresql
        environment:
            POSTGRES_DB: music
            POSTGRES_USER: postgres
            POSTGRES_PASSWORD: rootroot
        volumes:
            - /PATH/TO/DB_DATA:/var/lib/postgresql/data

    web:
        build:
            context: docker/django
            target: app
        container_name: manazeak_app
        # Dev command
        # command: bash -c "python3 manage.py migrate && python3 manage.py initialiseDB && python3 manage.py runserver 0.0.0.0:8000"
        # Prod command
        command: bash -c "python3 manage.py migrate && python3 manage.py initialiseDB && /root/.local/bin/daphne -p 8000 -b 0.0.0.0 ManaZeak.asgi:application"
        volumes:
            - /PATH/TO/MUSIC:/library
            - ./static:/static
            - .:/ManaZeak
        links:
            - syncthing:st
            - db
            - cache
        ports:
            - "127.0.0.1:8000:8000"
        depends_on:
            - db
            - cache

    nginx:
        image: nginx:latest
        container_name: manazeak_nginx
        ports:
            - "80:8000"
        volumes:
            - /PATH/TO/MUSIC:/library
            - ./docker/nginx/config:/etc/nginx/conf.d
            - ./static:/static
        depends_on:
            - web
        links:
            - web

    moodbar:
        build:
            context: docker/moodbar
            target: mood
        container_name: manazeak_moodbar
        volumes:
            - /PATH/TO/MUSIC:/library
            - ./static/mood:/moodbar/static

    syncthing:
        image: syncthing/syncthing:latest
        container_name: manazeak_syncthing
        # network_mode: "host" # For local discovery
#        environment:
#            - PUID=1000
        volumes:
            - /PATH/TO/MUSIC:/ManaZeak
            - /PATH/TO/PICTURES:/Pictures # Path leading to the ManaZeak Pictures (artists face, genre and producer logo)
        ports:
            - "127.0.0.1:8384:8384"
            - "22000:22000"
            - "21027:21027/udp"
    cache:
        image: memcached
        container_name: manazeak_memcached
        command: bash -c "memcached -I 5m -m 1000m"

