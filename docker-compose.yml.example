version: '3'
services:

    db:
        image: postgres:latest
        container_name: manazeak_postgresql
        environment:
            POSTGRES_DB: music
            POSTGRES_USER: postgres
            POSTGRES_PASSWORD: rootroot
        volumes:
            - /PATH/TO/DB_DATA:/var/lib/postgresql/data

    web:
        build:
            context: .
            dockerfile: docker/django/Dockerfile
        container_name: manazeak_app
        command: bash -c "python3 manage.py migrate && python3 manage.py startCron && python3 manage.py runserver 0.0.0.0:8000"
        volumes:
            - /PATH/TO/MUSIC:/library
            - ./static:/static
            - .:/ManaZeak
        links:
            - syncthing:st
            - db
        ports:
            - "127.0.0.1:8000:8000"
        depends_on:
            - db

    nginx:
        image: nginx:latest
        container_name: manazeak_nginx
        ports:
            - "80:8000"
        volumes:
            - /PATH/TO/MUSIC:/library
            - ./docker/nginx/config:/etc/nginx/conf.d
            - ./static:/static
        depends_on:
            - web
        links:
            - web

    moodbar:
        build:
            context: docker/moodbar
        container_name: manazeak_moodbar
        volumes:
            - /PATH/TO/MUSIC:/library
            - ./static/mood:/moodbar/static

    syncthing:
        image: syncthing/syncthing:latest
        container_name: manazeak_syncthing
        # network_mode: "host" # For local discovery
        volumes:
            - /PATH/TO/MUSIC:/ManaZeak
        ports:
            - "127.0.0.1:8384:8384"
            - "22000:22000"
            - "21027:21027/udp"
